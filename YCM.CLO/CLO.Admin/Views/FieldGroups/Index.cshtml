@model IEnumerable<YCM.CLO.DataAccess.Models.FieldGroup>

@{
    ViewBag.Title = "Fields Groups";
}

<h2>Field Groups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myTable" class="table table-striped table-bordered table-condensed">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FieldGroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayIcon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowOnPositions)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldGroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayIcon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowOnPositions)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FieldGroupId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FieldGroupId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FieldGroupId })
                </td>
            </tr>
        }
    </tbody>
</table>
