        <th>
            @Html.DisplayNameFor(model => model.CellClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CellTemplate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hidden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PinnedLeft)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSecurityOverride)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldGroup.FieldGroupName)
                </td>
