    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FieldGroup.FieldGroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FieldName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JsonPropertyName)
        </th>
