            @Html.DisplayNameFor(model => model.JsonFormatString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayWidth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPercentage)
