                    @Html.DisplayFor(modelItem => item.FieldName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JsonPropertyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JsonFormatString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayWidth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPercentage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeaderCellClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellTemplate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hidden)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PinnedLeft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSecurityOverride)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FieldId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FieldId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FieldId })
                </td>
            </tr>
        }
    </tbody>

</table>
