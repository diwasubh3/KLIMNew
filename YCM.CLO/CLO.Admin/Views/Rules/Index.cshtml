@model IEnumerable<YCM.CLO.DataAccess.Models.Rule>

@{
    ViewBag.Title = "Rules";
}

<h2>Rules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myTable" class="table table-striped table-bordered table-condensed">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RuleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExecutionStoredProcedure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortOrder)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutionStoredProcedure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RuleId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RuleId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RuleId })
                </td>
            </tr>
        }
    </tbody>
</table>
